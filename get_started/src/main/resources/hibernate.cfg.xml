<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="org.hibernate.dialect.MySQLDialect"/>
        <property name="hibernate.connection.url">jdbc:mysql://0.0.0.0:3306/java-mysql</property>
        <property name="hibernate.connection.username">java-mysql</property>
        <property name="hibernate.connection.password">pwd</property>

        <mapping resource="de/hibernate/Person.hbm.xml"/>
    </session-factory>
</hibernate-configuration>